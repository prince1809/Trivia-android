<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TitleFragment">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/image_header_height"
                android:id="@+id/titleImage" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/horizontal_margin"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/horizontal_margin"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/playButton"
                app:layout_constraintHorizontal_bias="0.0" app:srcCompat="@drawable/android_trivia"/>
        <Button
                android:text="Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playButton" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/horizontal_margin" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleImage" android:paddingStart="@dimen/button_padding"
                android:paddingEnd="@dimen/button_padding" android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text_size" android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
